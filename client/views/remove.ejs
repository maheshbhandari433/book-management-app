<form id="deleteForm">
    <h2>Select books to delete</h2>
    <table class="book-table">
        <thead>
            <tr>
                <th>Select</th>
                <th>ID</th>
                <th>Name</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            <% books.forEach(book => { %>
                <tr>
                    <td><input type="checkbox" name="booksToDelete" value="<%= book.bookID %>"></td>
                    <td><%= book.bookID %></td>
                    <td><%= book.name %></td>
                    <td><i><%= book.author %></i></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <button type="button" id="deleteButton">Delete Selected Books</button>
</form>

<div id="message"></div>
