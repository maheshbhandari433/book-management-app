    <% if (book) { %>
        <h2>Book Details</h2>
        <div class="book-table">
            <table>
                <tbody>
                    <tr>
                        <td><strong>Id:</strong></td>
                        <td><%= book.bookID %></td>
                    </tr>
                    <tr>
                        <td><strong>Name:</strong></td>
                        <td><%= book.name %></td>
                    </tr>
                    <tr>
                        <td><strong>Author:</strong></td>
                        <td><%= book.author %></td>
                    </tr>
                    <tr>
                        <td><strong>Topic:</strong></td>
                        <td><%= book.topic %></td>
                    </tr>
                    <tr>
                        <td><strong>Type:</strong></td>
                        <td><%= book.type %></td>
                    </tr>
                </tbody>
            </table>
        </div>
    <% } %>
